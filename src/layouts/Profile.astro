---
import ProfileHead from '../components/ProfileHead.astro';
import type Profile from '../models/Profile';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

export interface Props {
	title?: string;
	description?: string;
  profile: Profile;
}

const { title, description, profile } = Astro.props;
---
<!doctype html>
<html lang={lang}>
  <head>
		<ProfileHead title={title ?? SITE_TITLE} description={description ?? SITE_DESCRIPTION} profile={profile} />
	</head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>