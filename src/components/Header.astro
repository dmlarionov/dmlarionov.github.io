---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href={`/${lang}/`}>{t('nav.home')}</HeaderLink>
		<HeaderLink href={`/${lang}/articles/`}>{t('nav.blog')}</HeaderLink>
		<HeaderLink href={`/${lang}/about/`}>{t('nav.about')}</HeaderLink>
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
